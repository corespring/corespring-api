<assessmentItem>
    <correctResponseFeedback>Correct!</correctResponseFeedback>
    <incorrectResponseFeedback>Good try.</incorrectResponseFeedback>
    <responseDeclaration identifier="interceptTest" baseType="string" cardinality="ordered">
        <correctResponse>
            <value>0,6</value>
            <value>-3,0</value>
        </correctResponse>
    </responseDeclaration>
    <itemBody>

        <p>Identify the y-intercept and x-intercept of the line y=2x+6 by marking the points on the graph.</p>
        <pointInteraction responseIdentifier="interceptTest"
                          graph-width="300px"
                          graph-height="300px"
                          domain="10"
                          range="10"
                          scale="1"
                          range-label="y"
                          domain-label="x"
                          tick-label-frequency="5"
                          point-labels="y-intercept,x-intercept"
                          additional-text="More instructions about what is required for this taks. This text can run the width of this space, then wrap and push down any content below it"
                          max-points="2"
                         />

        <feedbackBlock outcomeIdentifier="responses.interceptTest.outcome.incorrect">
            <div class="feedback-block-incorrect">Good try.</div>
        </feedbackBlock>

        <feedbackBlock outcomeIdentifier="responses.interceptTest.outcome.correct">
            <div class="feedback-block-correct">Correct!</div>
        </feedbackBlock>

    </itemBody>
</assessmentItem>

