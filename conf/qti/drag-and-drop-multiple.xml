<assessmentItem>
    <responseDeclaration identifier="alphabet1" cardinality="targeted" baseType="identifier">
        <correctResponse>
            <value identifier="target1">
                <value>apple</value>
                <value>pear</value>
            </value>
            <value identifier="target2">
                <value>cow</value>
            </value>
            <value identifier="target3">
                <value>car</value>
                <value>bus</value>
            </value>
        </correctResponse>
    </responseDeclaration>

    <itemBody>
        <dragAndDropInteraction responseIdentifier="alphabet1" orderMatters="true">
            Complete the equation below:

            <draggableChoiceGroup shuffle="true" answersPerRow="3">
                    <draggableChoice identifier="apple" copyOnDrag="true" fixed="true">Apple</draggableChoice>
                    <draggableChoice identifier="pear" placeholder-class="placeholder">Pear</draggableChoice>
                    <draggableChoice identifier="walnut" fixed="true">Walnut</draggableChoice>
                    <draggableChoice identifier="car">Car</draggableChoice>
                    <draggableChoice identifier="cow">Cow</draggableChoice>
                    <draggableChoice identifier="bus">Bus</draggableChoice>
            </draggableChoiceGroup>

            <table>
                <tr>
                    <td>
                        Fruits
                        <landingPlace cardinality="multiple" class="blueTile inline" identifier="target1">
                            <feedbackInline csFeedbackId='target1' identifier='target1' showHide='show'>Target 1</feedbackInline>
                        </landingPlace>
                    </td>
                </tr>
                <tr>
                    <td>
                        Animals
                        <landingPlace cardinality="single" class="blueTile inline" identifier="target2"></landingPlace>
                    </td>
                    </tr>
                <tr>
                    <td>
                        Vehicles
                        <landingPlace cardinality="multiple" class="blueTile inline" identifier="target3"></landingPlace>
                    </td>
                    <td>
                        equals 5x
                    </td>
                </tr>


            </table>

            {{listAnswers}}
            <br/>
            {{listTargets}}


        </dragAndDropInteraction>

    </itemBody>
</assessmentItem>

