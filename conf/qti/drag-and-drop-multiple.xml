<assessmentItem>
    <responseDeclaration identifier="alphabet1" cardinality="targeted" baseType="identifier">
        <correctResponse>
            <value identifier="target1">
                <value>apple</value>
                <value>pear</value>
            </value>
            <value identifier="target2">
                <value>cow</value>
            </value>
            <value identifier="target3">
                <value>car</value>
                <value>bus</value>
            </value>
        </correctResponse>
    </responseDeclaration>

    <itemBody>
        <dragAndDropInteraction responseIdentifier="alphabet1" orderMatters="true">
            <prompt>   Complete the equation below:            </prompt>

            <draggableChoiceGroup shuffle="true" answersPerRow="3">
                <draggableChoice identifier="apple" copyOnDrag="true" fixed="true">Apple</draggableChoice>
                <draggableChoice identifier="pear" placeholder-class="placeholder">Pear</draggableChoice>
                <draggableChoice identifier="walnut" fixed="true">Walnut</draggableChoice>
                <draggableChoice identifier="car"><img src="http://cdn2.iconfinder.com/data/icons/iconslandtransport/PNG/64x64/CabrioletRed.png" width="50px" height="50px" /></draggableChoice>
                <draggableChoice identifier="cow">Cow</draggableChoice>
                <draggableChoice identifier="bus">Bus</draggableChoice>
            </draggableChoiceGroup>

            <answerArea>
                <table class="csDropTiles">
                    <tr>
                        <td>
                            Fruits
                            <landingPlace cardinality="multiple" identifier="target1">
                            </landingPlace>
                        </td>
                        <td>
                            Animals
                            <landingPlace cardinality="single" identifier="target2"></landingPlace>
                        </td>
                        <td>
                            Vehicles
                            <landingPlace cardinality="multiple" identifier="target3"></landingPlace>
                        </td>
                    </tr>
                </table>
            </answerArea>

        </dragAndDropInteraction>

        <feedbackBlock outcomeIdentifier="responses.alphabet1.outcome.correct" identifier="id2">
            <div class="feedback-block-correct">Your answer is correct!</div>
        </feedbackBlock>

        <feedbackBlock outcomeIdentifier="responses.alphabet1.outcome.incorrect" identifier="id3">
            <div class="feedback-block-incorrect">Your answer is incorrect!</div>
        </feedbackBlock>


    </itemBody>
</assessmentItem>

