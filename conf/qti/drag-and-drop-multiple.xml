                    <draggableAnswer identifier="pear" placeholder-class="placeholder">Pear</draggableAnswer>
                    <draggableAnswer identifier="walnut" fixed="true">Walnut</draggableAnswer>
                    <draggableAnswer identifier="car">Car</draggableAnswer>
                    <draggableAnswer identifier="cow">Cow</draggableAnswer>
                    <draggableAnswer identifier="bus">Bus</draggableAnswer>
            </draggableAnswerGroup>

            <table>
                <tr>
                    <td>
                        Fruits
                        <dragTarget cardinality="multiple" class="blueTile inline" identifier="target1"></dragTarget>
                    </td>
                </tr>
                <tr>
                    <td>
                        Animals
                        <dragTarget cardinality="single" class="blueTile inline" identifier="target2"></dragTarget>
                    </td>
                    </tr>
                <tr>
                    <td>
                        Vehicles
                        <dragTarget cardinality="multiple" class="blueTile inline" identifier="target3"></dragTarget>
                    </td>
                    <td>
                        equals 5x
                    </td>
                </tr>


            </table>

            {{listAnswers}}
            <br/>
            {{listTargets}}


        </dragAndDropInteraction>

    </itemBody>
