<assessmentItem>
    <correctResponseFeedback>Looking good buddy</correctResponseFeedback>
    <incorrectResponseFeedback>You should rethink this</incorrectResponseFeedback>
    <responseDeclaration identifier="interceptTest" baseType="string" cardinality="ordered">
        <correctResponse>
            <value>0,6</value>
            <value>-3,0</value>
        </correctResponse>
    </responseDeclaration>
    <itemBody>

        Give the y-intercept and x-intercept of y=2x+6
        <pointInteraction responseIdentifier="interceptTest"
                         point-labels="y-intercept,x-intercept"
                         additional-text="More instructions about what is required for this taks. This text can run the width of this space, then wrap and push down any content below it"
                         max-points="2"
                         />

        <feedbackBlock outcomeIdentifier="responses.interceptTest.outcome.incorrect">
            <div class="feedback-block-incorrect">Wrong!</div>
        </feedbackBlock>

        <feedbackBlock outcomeIdentifier="responses.interceptTest.outcome.correct">
            <div class="feedback-block-correct">You're right!</div>
        </feedbackBlock>

    </itemBody>
</assessmentItem>

