<assessmentItem>
    <correctResponseFeedback>Looking good buddy</correctResponseFeedback>
    <incorrectResponseFeedback>You should rethink this</incorrectResponseFeedback>
    <responseDeclaration identifier="interceptTest" baseType="string" cardinality="ordered">
        <correctResponse>
            <value>0,6</value>
            <value>-3,0</value>
        </correctResponse>
    </responseDeclaration>
    <itemBody>

        Give the y-intercept and x-intercept of y=2x+6
        <pointInteraction jsxgraphcore=""
                         responseIdentifier="interceptTest"
                         graph-width="300px"
                         graph-height="300px"
                         point-labels="y-intercept,x-intercept"
                         max-points="2"
                />

        <feedbackBlock outcomeIdentifier="responses.yinterceptTest.outcome.incorrect">
            <div class="feedback-block-incorrect">Wrong!</div>
        </feedbackBlock>

        <feedbackBlock outcomeIdentifier="responses.yinterceptTest.outcome.correct">
            <div class="feedback-block-correct">You're right!</div>
        </feedbackBlock>

    </itemBody>
</assessmentItem>

